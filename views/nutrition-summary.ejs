<!DOCTYPE html>
<html>

<head>
    <title>Weekly Nutrition Summary</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f5f5;
            padding: 1em;
        }

        .container {
            max-width: 900px;
            margin: auto;
            background: white;
            padding: 1em;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1em;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background: #f4f4f4;
        }

        h1 {
            text-align: center;
        }

        canvas {
            margin-top: 2em;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Weekly Nutrition Summary</h1>

        <% if (summary.length===0) { %>
            <p>No logs available for the last 7 days.</p>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Calories</th>
                            <th>Protein (g)</th>
                            <th>Carbs (g)</th>
                            <th>Fats (g)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% summary.forEach(day=> { %>
                            <tr>
                                <td>
                                    <%= day.date %>
                                </td>
                                <td>
                                    <%= day.calories.toFixed(2) %>
                                </td>
                                <td>
                                    <%= day.protein.toFixed(2) %>
                                </td>
                                <td>
                                    <%= day.carbs.toFixed(2) %>
                                </td>
                                <td>
                                    <%= day.fats.toFixed(2) %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

                <canvas id="nutritionChart"></canvas>
                <% } %>
    </div>

    <script>
        const ctx = document.getElementById('nutritionChart').getContext('2d');
        const chartData = <% - JSON.stringify(chartData) %>;

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: chartData.labels,
                datasets: [
                    { label: 'Calories', data: chartData.calories, borderColor: 'red', fill: false },
                    { label: 'Protein (g)', data: chartData.protein, borderColor: 'blue', fill: false },
                    { label: 'Carbs (g)', data: chartData.carbs, borderColor: 'green', fill: false },
                    { label: 'Fats (g)', data: chartData.fats, borderColor: 'orange', fill: false }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    title: { display: true, text: 'Daily Nutrition Breakdown (Last 7 Days)' }
                }
            }
        });
    </script>
</body>

</html>