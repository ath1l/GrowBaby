<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Baby Nutrition Analysis - Grow Baby</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

        :root {
            --hex-current-1: #7360DF;
            --hex-current-2: #C499F3;
            --hex-current-3: rgba(196, 153, 243, 0.1);
            --text-dark: #33186B;
            --text-light: #7360DF;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #F2AFEF 0%, #C499F3 25%, #7360DF 50%, #33186B 75%, #F2AFEF 100%);
            min-height: 100vh;
            color: var(--text-dark);
            position: relative;
            overflow-x: hidden;
        }

        /* Animated background elements */
        body::before {
            content: '';
            position: fixed;
            top: -10%;
            left: -10%;
            width: 120%;
            height: 120%;
            background:
                radial-gradient(circle at 20% 80%, rgba(242, 175, 239, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(196, 153, 243, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(115, 96, 223, 0.3) 0%, transparent 50%);
            animation: float 25s ease-in-out infinite;
            z-index: -1;
        }

        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%237360DF' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
            z-index: -1;
            animation: dots 30s linear infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg) scale(1); }
            33% { transform: translateY(-20px) rotate(120deg) scale(1.05); }
            66% { transform: translateY(-10px) rotate(240deg) scale(0.95); }
        }

        @keyframes dots {
            0% { transform: translateX(0) translateY(0); }
            100% { transform: translateX(60px) translateY(60px); }
        }

        /* Header styles */
        .main-header {
            background-color: #c89af000;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            z-index: 10;
        }

        .header-container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 28px;
            font-weight: 700;
            color: #ff6b9d;
            text-decoration: none;
        }

        .main-nav a {
            margin: 0 1rem;
            text-decoration: none;
            color: #555;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .main-nav a:hover {
            color: var(--hex-current-1);
        }

        .my-baby {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #555;
            font-weight: 500;
        }

        .my-baby svg {
            width: 24px;
            height: 24px;
            margin-right: 8px;
            fill: #555;
        }

        .gradient-bar {
            height: 5px;
            background: linear-gradient(to right, #F2AFEF, #C499F3, #7360DF);
        }

        .container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 30px 20px;
            position: relative;
            z-index: 1;
        }

        .title {
            text-align: center;
            margin-bottom: 40px;
        }

        .title h1 {
            color: #ffffff00;
            font-size: 48px;
            font-weight: 800;
            margin-bottom: 8px;
            letter-spacing: -1px;
            position: relative;
        }

        .split-char {
            color: #6f55ff;
            background-color: rgb(196 153 243 / 0%);
            outline: none;
            border-radius: .25rem;
            display: inline-block;
            padding: 0.1rem 0.2rem;
            margin: 0.05rem;
        }

        .title p {
            color: var(--hex-current-1);
            font-size: 16px;
            font-weight: 500;
            text-shadow: 0 2px 10px rgba(115, 96, 223, 0.2);
        }

        .card {
            background: linear-gradient(145deg, rgb(255 255 255 / 64%) 0%, rgb(255 255 255 / 0%) 100%);
            backdrop-filter: blur(25px);
            padding: 32px;
            border-radius: 28px;
            box-shadow:
                0 25px 50px rgba(242, 175, 239, 0.15),
                0 15px 35px rgba(196, 153, 243, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.8);
            margin-bottom: 28px;
            border: 2px solid rgba(242, 175, 239, 0.3);
            position: relative;
            overflow: hidden;
        }

        .card h2 {
            margin-bottom: 28px;
            font-weight: 700;
            color: var(--text-light);
            font-size: 24px;
            text-align: center;
            position: relative;
        }
        
        .card h2::before {
             content: 'üçé';
             margin-right: 12px;
             font-size: 26px;
        }
        
        .card h3 {
             margin-top: 32px;
             margin-bottom: 16px;
             font-weight: 600;
             color: var(--text-light);
             font-size: 20px;
             border-bottom: 2px solid var(--hex-current-3);
             padding-bottom: 8px;
        }

        /* Form Styles */
        .food-form {
            display: grid;
            gap: 20px;
            margin-bottom: 30px;
        }
        .food-form label {
            font-weight: 600;
            color: var(--text-light);
            font-size: 14px;
        }
        .food-form input {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid rgba(196, 153, 243, 0.5);
            border-radius: 12px;
            background-color: rgba(255, 255, 255, 0.5);
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            color: var(--text-dark);
            transition: all 0.3s ease;
        }
        .food-form input:focus {
            outline: none;
            border-color: var(--hex-current-1);
            box-shadow: 0 0 0 3px rgba(115, 96, 223, 0.2);
        }

        /* Button Styles */
        .btn {
            display: block;
            width: 100%;
            padding: 18px 28px;
            text-align: center;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 700;
            font-size: 16px;
            color: white;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            border: none;
            cursor: pointer;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        .btn-primary {
            background: linear-gradient(135deg, #7360DF 0%, #C499F3 100%);
            box-shadow: 0 15px 35px rgba(115, 96, 223, 0.4);
        }
        .btn-primary:hover {
            box-shadow: 0 20px 40px rgba(115, 96, 223, 0.5);
            transform: translateY(-3px);
        }

        /* Table Styles */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1em;
            background: var(--hex-current-3);
            border-radius: 12px;
            overflow: hidden;
        }
        th, td {
            padding: 14px 18px;
            text-align: left;
            border-bottom: 1px solid rgba(196, 153, 243, 0.3);
        }
        th {
            background-color: rgba(115, 96, 223, 0.1);
            color: var(--text-light);
            font-weight: 600;
        }
        td {
            color: #5c538d;
        }
        tr:last-child th, tr:last-child td {
            border-bottom: none;
        }
        td ul {
            list-style-type: none;
            padding-left: 0;
            margin: 0;
        }

        .advice p {
            background-color: rgba(242, 175, 239, 0.15);
            padding: 16px;
            border-radius: 12px;
            color: #8c5b8a;
            line-height: 1.6;
        }
        
        .error {
            text-align: center;
            padding: 16px;
            background-color: rgba(255, 100, 130, 0.2);
            color: #d81b60;
            border-radius: 12px;
            font-weight: 500;
        }

        .summary-link-container {
            text-align: center;
            margin-top: 30px;
        }

        .summary-link {
            display: inline-block;
            padding: 14px 24px;
            background: linear-gradient(135deg, #F2AFEF 0%, #C499F3 100%);
            color: var(--text-dark);
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(242, 175, 239, 0.4);
            transition: all 0.3s ease;
        }
        .summary-link:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 15px 30px rgba(242, 175, 239, 0.6);
        }

    </style>
</head>

<body>
    <!-- Consistent Header from Homepage -->
    <header class="main-header">
        <div class="header-container">
            <a href="/" class="logo">Baby Joy</a>
            <nav class="main-nav">
                <a href="/">Home</a>
                <a href="/milestone">Milestone</a>
                <a href="/resources">Resources</a>
                <a href="/chatbot">Chatbot</a>
                <a href="/nutrition">Nutrition</a>
            </nav>
            <a href="/profile" class="my-baby">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                </svg>
                <span>
                    <% if (typeof babyName !== 'undefined') { %>
                        <%= babyName %>
                    <% } else { %>
                        My Baby
                    <% } %>
                </span>
            </a>
        </div>
    </header>
    <div class="gradient-bar"></div>

    <div class="container">
        <div class="title">
            <h1 id="page-title">Nutrition Analysis</h1>
            <p>Log your baby's meals to track their diet and get helpful advice.</p>
        </div>

        <div class="card">
            <form action="/nutrition" method="POST" class="food-form">
                <div>
                    <label for="food">Enter Food</label>
                    <input type="text" id="food" name="food" placeholder="e.g., mashed banana" required>
                </div>
                <div>
                    <label for="quantity">Quantity</label>
                    <input type="text" id="quantity" name="quantity" placeholder="e.g., 100g" required>
                </div>
                <div>
                    <label for="dateEaten">Date Eaten</label>
                    <input type="datetime-local" id="dateEaten" name="dateEaten">
                </div>
                <button type="submit" class="btn btn-primary">Analyze and Log Food</button>
            </form>

            <% if (typeof result !== 'undefined' && result && !result.error) { %>
                <div class="result">
                    <h2>Nutrition Breakdown</h2>
                    <table>
                        <tr>
                            <th>Calories</th>
                            <td><%= result.calories %></td>
                        </tr>
                        <tr>
                            <th>Protein</th>
                            <td><%= result.protein %></td>
                        </tr>
                        <tr>
                            <th>Carbohydrates</th>
                            <td><%= result.carbohydrates %></td>
                        </tr>
                        <tr>
                            <th>Fats</th>
                            <td><%= result.fats %></td>
                        </tr>
                        <tr>
                            <th>Vitamins</th>
                            <td>
                                <ul>
                                    <% result.vitamins.forEach(v => { %>
                                        <li><%= v %></li>
                                    <% }) %>
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <th>Minerals</th>
                            <td>
                                <ul>
                                    <% result.minerals.forEach(m => { %>
                                        <li><%= m %></li>
                                    <% }) %>
                                </ul>
                            </td>
                        </tr>
                    </table>

                    <div class="advice">
                        <h3>Parenting Advice</h3>
                        <p><%= result.advice %></p>
                    </div>
                </div>
            <% } else if (typeof result !== 'undefined' && result && result.error) { %>
                <p class="error"><%= result.error %></p>
            <% } %>

            <% if (typeof logs !== 'undefined' && logs && logs.length > 0) { %>
                <div class="log-section">
                    <h3>Recent Food Log</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Food</th>
                                <th>Quantity</th>
                                <th>Calories</th>
                                <th>Protein</th>
                                <th>Carbs</th>
                                <th>Fats</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% logs.forEach(l => { %>
                                <tr>
                                    <td><%= new Date(l.dateEaten).toLocaleString() %></td>
                                    <td><%= l.food %></td>
                                    <td><%= l.quantity %></td>
                                    <td><%= l.nutrition.calories %></td>
                                    <td><%= l.nutrition.protein %></td>
                                    <td><%= l.nutrition.carbohydrates %></td>
                                    <td><%= l.nutrition.fats %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <div class="summary-link-container">
                         <a href="/nutrition/summary" class="summary-link">üìä View Weekly Nutrition Summary</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        // Animate the page title
        const textElement = document.getElementById('page-title');
        const text = textElement.textContent;
        textElement.innerHTML = text.split('').map(char => {
            if (char === ' ') { return ' '; }
            return `<span class="split-char">${char}</span>`;
        }).join('');

        anime({
            targets: '.split-char',
            translateY: [
                { value: -10, duration: 500 },
                { value: 0, duration: 500 }
            ],
            loop: true,
            delay: anime.stagger(100),
            direction: 'alternate',
            easing: 'easeInOutQuad'
        });

        // Pre-fill current datetime in the form
        const now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        document.getElementById('dateEaten').value = now.toISOString().slice(0, 16);
    </script>
</body>

</html>
